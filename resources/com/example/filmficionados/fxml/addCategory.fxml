<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<DialogPane fx:id="categoryPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.filmficionados.controller.CatController">
   <content>
      <BorderPane fx:id="catPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
         <center>
            <HBox alignment="CENTER" spacing="8.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Title:" />
                  <TextField fx:id="catTitleText" promptText="Type here..." />
               </children>
            </HBox>
         </center>
         <top>
            <HBox BorderPane.alignment="CENTER">
               <children>
                  <Label text="What would you like to name your new category?">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
               </padding>
            </HBox>
         </top>
      </BorderPane>
   </content>
</DialogPane>
